{
    "config": "royale",
    "type": "lib",
    "compilerOptions": {
        // To enable code completion in JS blocks while working,
        // the SWF target needs to be commented out
        "debug": false,
        "targets": [
            "SWF",
            "JSRoyale"
        ],
        "external-library-path": [
            "${royalelib}/js/libs",
            "${royalelib}/../js/libs",
            "libs"
         ],
         "js-external-library-path": [
            "${royalelib}/../js/libs",
            "${royalelib}/js/libs",
            "libs"
         ],
        "load-config": [
            "asconfigc-config.xml"
        ],
        "js-load-config": [
            "js-compile-config.xml"
        ],
        "warn-public-vars": false,
        "include-classes": [
            "Spectrum"
        ],
        "include-sources": [
            "src"
        ],
        "source-path": [
            "src"
        ],
        "output": "target/Spectrum.swc"
    },
    "additionalOptions": [
        "-js-output-optimization=skipAsCoercions",
        "-js-dynamic-access-unknown-members=true",
        "-allow-private-constructors=true",
        "-js-complex-implicit-coercions=false",
        "-js-vector-emulation-class=Array",
        "-js-vector-index-checks=false"
    ]
}