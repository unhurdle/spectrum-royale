        '<H4 text="Selected Item"/>\n'+
        '<sp:Picker quiet="true" invalid="true" selectedItem="{Bal}">\n'+
        '  <sp:dataProvider>\n'+
        '  <fx:Array>\n'+
        '    <sp:MenuItem id="Bal" text="Ballard"/>\n'+
        '    <sp:MenuItem text="Freemont"/>\n'+
        '    <sp:MenuItem text="Greenwood"/>\n'+
        '    <sp:MenuItem isDivider="true"/>\n'+
