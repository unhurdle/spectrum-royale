<view:DemoPane xmlns:fx="http://ns.adobe.com/mxml/2009"
  xmlns:view="view.*" xmlns:sp="library://ns.unhurdle.com/spectrum"
  xmlns="library://ns.apache.org/royale/html" xmlns:comp="view.components.*"
  title="Card - Asset preview">
  <fx:Script>
    <![CDATA[
      [Bindable]public var markupText:String = 
'<Div width="108">\n'+
'  <sp:Card>\n'+
'  <sp:preview>\n'+
'    <sp:ImageAsset src="https://opensource.adobe.com/spectrum-css/example-card-portrait.png"/>\n'+
'  </sp:preview>\n'+
'  <sp:body>\n'+
'    <sp:CardBody>\n'+
'      <sp:CardHeader>\n'+
'        <sp:CardTitle text="Card Title"/>\n'+
'      </sp:CardHeader>\n'+
'      <sp:CardContent>\n'+
'        <sp:CardSubtitle text="jpg"/>\n'+
'      </sp:CardContent>\n'+
'    </sp:CardBody>\n'+
'  </sp:body>\n'+
'  <sp:quickActions>\n'+
'    <sp:QuickActions>\n'+
'      <sp:CheckBox/>\n'+
'    </sp:QuickActions>\n'+
'  </sp:quickActions>\n'+
'  </sp:Card>\n'+
'</Div>';
    ]]>
  </fx:Script>
  <comp:Variant>
    <Div width="108">
      <sp:Card>
      <sp:preview>
        <sp:ImageAsset src="https://opensource.adobe.com/spectrum-css/example-card-portrait.png"/>
      </sp:preview>
      <sp:body>
        <sp:CardBody>
          <sp:CardHeader>
            <sp:CardTitle text="Card Title"/>
          </sp:CardHeader>
          <sp:CardContent>
            <sp:CardSubtitle text="jpg"/>
          </sp:CardContent>
        </sp:CardBody>
      </sp:body>
      <sp:quickActions>
        <sp:QuickActions>
          <sp:CheckBox/>
        </sp:QuickActions>
      </sp:quickActions>
      </sp:Card>
    </Div>
  </comp:Variant>
  <comp:Markup>
    <comp:StyledCode text='{markupText}'/>
  </comp:Markup>


</view:DemoPane>